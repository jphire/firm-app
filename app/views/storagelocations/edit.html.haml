- provide(:title, 'Muokkaa varastopaikkaa')

.span6.offset3
  %h2 Muokkaa varastopaikkaa

.container
  .span6.offset3
    = render "shared/nav"

  .span6.offset3.outline
    .row
      .span4.offset1
        = form_for @storagelocation do |f|
          //= render 'shared/material_error_messages'
          %p
            = f.label :name, "Nimi"
            = f.text_field :name
            = f.label :info, "LisÃ¤tietoja"
            = f.text_field :info

            
          = f.submit "Tallenna", class: "btn btn-large btn-primary"
        
  .span6.offset3
    %p
      = link_to request.env["HTTP_REFERER"] do
        %i.icon-arrow-left
        Takaisin
      |
      = link_to "Kaikki varastopaikat", :controller => "storagelocations", :action => "index", :huslab_id=> @huslab.id
