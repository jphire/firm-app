.span8.bordered
  .span4
    - #smart way to make links to any kind of firms..
    %h3= link_to firm.name, firm.resource.class.find(firm.resource_id)
    %p Toimiala: #{firm.resource_type}

  .span2
    - if current_user.admin?
      .row
        = link_to "Muokkaa", { controller: :firms, action: :edit, :id => firm.id }, method: :get, class: "btn btn-mini btn-primary"      
        = link_to "Poista", firm, controller: :firms, method: :delete, confirm: "Haluatko varmasti poistaa yrityksen?", class: "btn btn-mini btn-danger"

