= provide(:title, 'Yritykset')

%h1 Yritykset

.container.bordered
  .span7.offset1
    - if @firms.empty?
      .well.span7.offset1.alert-error
        %p Tiliisi ei vielä ole liitetty yrityksiä. Jos haluat liittää yrityksen, ota yhteyttä:
        = mail_to @email_us
    - else
      .span7.offset1
        = will_paginate @firms, :param_name => 'page', :previous_label => "< Edellinen", :next_label => "Seuraava >"
      .span7.offset1.well.blue
        - @firms.each do |firm|
          = render firm
  .span7.offset1
    .span7.offset1
      = will_paginate @firms, :param_name => 'page', :previous_label => "< Edellinen", :next_label => "Seuraava >"
      
.container
  .span7.offset1
    .span7.offset1
      - if is_admin?
        = link_to new_firm_path do
          %i.icon-plus
          Lisää yritys

