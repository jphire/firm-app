%header{ class:'navbar navbar-fixed-top' }
  %div{class: 'navbar-inner'}
    %div.container
      = link_to "devlfin", root_path, id: "logo"    
      %nav
        %ul{class:'nav pull-right'}
          %li
            = link_to :controller => "static_pages", :action => "home" do
              %i.icon-home.icon-white
              Koti
          - if signed_in?
            = if is_admin?
              %li= link_to "Käyttäjät", users_path             
            %li
              = link_to :controller => "firms", :action => "index" do
                %i.icon-list-alt.icon-white
                Yritykset
            %li#fat-menu.dropdown 
              %a{class: "dropdown-toggle", href: "#", data: {toggle: "dropdown"}} 
                %i.icon-cog.icon-white
                Tili<b class="caret"></b> 
              
              %ul.dropdown-menu
                = link_to "Profiili", current_user
                = link_to "Asetukset", edit_user_path(current_user)
                %li.divider
                %li= link_to "Kirjaudu ulos", signout_path, method: "delete"
          - else
            %li= link_to "Kirjaudu", signin_path      
