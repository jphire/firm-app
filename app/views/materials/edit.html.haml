- provide(:title, 'Muokkaa raaka-aine')

%h1 Muokkaa raaka-ainetta

.container
  .span6.offset3
    = render "shared/nav"

.row
  .span6.offset3.well
    = form_for @material do |f|
      = render 'shared/material_error_messages'
      %p
        = f.label :name, "Nimi" 
        = f.text_field :name 
        = f.label :price, "Kilohinta (â‚¬)"
        = f.text_field :price
        
      = f.submit "Tallenna", class: "btn btn-large btn-primary"
    
    %p
      = link_to request.env["HTTP_REFERER"] do
        %i.icon-arrow-left
        Takaisin
      |
      = link_to "Kaikki raaka-aineet", :controller => "materials", :action => "index", :bakery_id => @bakery.id
      |
      = link_to "Poista", @material, method: :delete, confirm: "Haluatko varmasti poistaa raaka-aineen?"
